        FontAttributes="Bold"
        Clicked="Page1" 
        Margin="40,10,40,20"
        TextColor="White"
        BackgroundColor="#004B93"
                        Grid.Column="0"/>

                <Button Text="Siguiente   ⇛"
        FontAttributes="Bold"
        Clicked="Page3" 
        Margin="40,10,40,20"
        TextColor="White"
        BackgroundColor="#004B93"
                        Grid.Column="1"/>
            </Grid>
            

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>